/**index.wxss**/
.container {
  align-items: center;
}
.scroll-view {
  width: 100%;
  height: 60rpx;
  margin-top: 20rpx;
  padding-right: 80rpx;
  border-bottom: 1rpx solid #ccc;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.navbar{
  position: relative;
  height: 60rpx;
  display: flex;
}
.navbar .navbar-item {
  color: #333333;
  padding-left: 40rpx;
}
.navbar .navbar-item.item-on {
  color: #E82363;
}
.navbar .title {
  font-size: 32rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.navbar .navbar-slider {
  height: 2rpx;
  background-color: #E82363;
  position: absolute;
  left: 0;
  bottom: 0;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
}